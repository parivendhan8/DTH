    <AutoCompleteTextView
        android:id="@+id/new_col_name_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:hint="Customer Name"
        android:completionThreshold="1"
        android:digits="abcdefghijklmnopqr _stuvwxyzAQZWSXEDCRFVTGBYHNUJMIKLOP."
        android:textColor="#000000"
        android:prompt="@string/Select_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="55dp" />
    <!--</com.google.android.material.textfield.TextInputLayout>-->

    <EditText
        android:id="@+id/area"
        android:layout_marginStart="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:hint="Area"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/new_col_name"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginLeft="8dp" />
    <EditText
        android:id="@+id/fromdate"
        android:layout_marginStart="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="From Date"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/area"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginLeft="8dp" />

    <EditText
        android:id="@+id/todate"
        android:layout_marginStart="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="To Date"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/fromdate"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginLeft="8dp" />

    <Button
        android:layout_gravity="center"
        android:id="@+id/search_id"
        android:layout_width="wrap_content"
        android:text="Search"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:textColor="#fff"
        android:background="#0F5512"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todate"
        tools:ignore="MissingConstraints" />


</LinearLayout>